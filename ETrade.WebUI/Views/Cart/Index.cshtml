@model ETrade.WebUI.Models.Basket.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    @if (Model.CartItems.Any())
    {
        <form asp-action="UpdateCart" asp-controller="Cart" method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.ProductDescription</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>
                                <input type="number" name="cartItems[@item.ProductId].Quantity"
                                       value="@item.Quantity" min="1" class="form-control" />
                            </td>
                            <td>@item.Subtotal.ToString("C")</td>
                            <td>
                                <a asp-action="RemoveFromCart" asp-controller="Cart" asp-route-productId="@item.ProductId"
                                   class="btn btn-danger btn-sm">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-between">
                <h4>Total: @Model.TotalAmount.ToString("C")</h4>
                <button type="submit" class="btn btn-primary">Update Cart</button>
            </div>
        </form>
    }
    else
    {
        <p>Your cart is empty.</p>
    }

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Continue Shopping</a>
        <a asp-action="Checkout" asp-controller="Order" class="btn btn-success">Proceed to Checkout</a>
    </div>
</div>
